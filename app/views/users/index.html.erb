<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>自己紹介</th>
      <th>プロフィール</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.postal_code %></td>
        <td><%= user.address %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to '表示', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
