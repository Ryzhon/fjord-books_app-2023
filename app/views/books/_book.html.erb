<div id="<%= dom_id book %>">
  <p>
    <strong><%= t(book.title) %>：</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= t(book.memo) %>：</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= t(book.author) %>：</strong>
    <%= book.author %>
  </p>

  <% if book.picture.present? %>
    <p>
      <strong><%= t('book.picture') %>：</strong>
      <%= image_tag(book.picture_url) %>
    </p>
  <% end %>

</div>
