<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
  <% if user_signed_in? %>
  <%= link_to t('resources.actions.index', resource: t('activerecord.models.user')), users_path %> |
  <%= link_to t('resources.actions.show', resource: t('activerecord.models.user')), user_path(current_user) %> |
  <%= link_to t("devise.links.log_out"), destroy_user_session_path, method: :delete %>
  <% else %>
  <%= link_to t("devise.links.log_in"), new_user_session_path %> |
  <%= link_to t("devise.links.sign_up"), new_user_registration_path %>
  <% end %>
    <%= yield %>
  </body>
</html>
